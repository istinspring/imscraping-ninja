{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true,
      "experimentalObjectRestSpread": true
    },
    "import/resolve": {
      "extensions": [
        ".js",
        ".jsx",
        ".json"
      ]
    }
  },
  "extends": [
    "eslint:recommended", "plugin:react/recommended",
    "plugin:import/errors"
  ],
  "rules": {
    "require-jsdoc": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": [0],
    "func-names": [0],
    "no-extra-semi": [2],
    "no-else-return": [0],
    "space-infix-ops": [0],
    "object-curly-spacing": [2, "always"],
    "react/prefer-es6-class": [1],
    "react/prefer-stateless-function": [0],
    "react/jsx-uses-react": 1,
    "import/no-unresolved": [2, {"commonjs": true, "amd": true}]
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      "\\.json$",
      "\\.css",
      "\\.scss"
    ],
    "import/parser": "babel-eslint",
    "import/resolve": {
      "extensions": [
        ".js",
        ".jsx",
        ".json"
      ]
    }
  },
  "globals": {
    "__PREFIX_LINKS__": true
  }
}
